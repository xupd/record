.c-body {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
          justify-content: space-around;
}
.c-body .cb {
  width: 300rpx;
  height: 150rpx;
  background-color: red;
  color: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 32rpx;
}
.c-list {
  width: 100%;
  padding: 30rpx 38rpx;
}
.c-list .cl-item {
  width: 100%;
  min-height: 180rpx;
  margin-top: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: nowrap;
          flex-wrap: nowrap;
}
.c-list .cl-item .left {
  width: 230rpx;
  height: 100%;
}
.c-list .cl-item .left image {
  width: 100%;
  height: 180rpx;
}
.c-list .cl-item .right {
  width: calc(100% - 250rpx);
  height: 100%;
  margin-left: 20rpx;
}
.c-list .cl-item .right .r-top {
  width: 100%;
  min-height: 60rpx;
  padding: 10rpx;
  font-size: 30rpx;
}
.c-list .cl-item .right .r-bottom {
  width: 100%;
  min-height: 120rpx;
  padding: 10rpx;
  font-size: 26rpx;
